<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:orientation="horizontal"
    android:weightSum="5">


    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:scaleType="fitCenter"
        android:layout_weight="0.4"
        android:paddingTop="@dimen/_5sdp"
        app:srcCompat="@drawable/sp_q" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_weight="2.6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

            <TextView
                android:id="@+id/paymenygoodsName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_weight="2.6"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="商品我我我我我我我"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_11sdp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="@dimen/_10sdp"
            android:weightSum="2.6">

            <TextView
                android:id="@+id/paymenygoodschild"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.9"
                android:textAlignment="center"
                android:text="王天天"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/paymenygoodsbuild"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="1.7"
                android:textAlignment="center"
                android:text="三峽光明公共托中心親子管"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_7sdp" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/paymenygoodsNumber"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.5"
        android:text="20"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/paymenygoodsPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1"
        android:text="200000"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>